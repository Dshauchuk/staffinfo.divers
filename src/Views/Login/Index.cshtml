@model LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Вход</h1>

@{
    if (!string.IsNullOrEmpty((string)ViewData["LoginError"]))
    {
        <p class="validation-summary-errors">
            @ViewData["LoginError"]
        </p>
    }
}

<form asp-action="SignIn" asp-controller="Login">
    <div class="form-group">
        <label asp-for="Login" class="input-name">* Логин</label>
        <input asp-for="Login" type="text" class="form-control required" placeholder="Example: Jackie27">
        <span asp-validation-for="Login"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="input-name">* Пароль</label>
        <input asp-for="Password" type="password" class="form-control required">
        <span asp-validation-for="Password"></span>
    </div>

    <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in fa-lg"></i> Войти</button>
</form>
